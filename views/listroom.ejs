</head>

<body>
  <div id="main">
    <div id="nav">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/index">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/findroom">Find Rooms</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listroom">List Ads</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/save">Save Ads</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="/profile">Hello <%= loggedInUser.username%></a>
        </li>

      </ul>
    </div>
    <h2 class="mt-5 text-center fw-semibold">POST YOUR AD</h2>
    <form class="container mt-5 mb-5" style="width: 40vw;" action="/uploadpost" method="post" enctype="multipart/form-data">
      <h5 class="ms-2">Type </h5>
      <select class="input-group p-2" name="type" id="">
        <option value="">Select One</option>
        <option value="Single Room">Single Room</option>
        <option value="Flat">Flat</option>
        <option value="Commercial">Commercial</option>
        <option value="Appartment">Appartment</option>
      </select>

      <h5 class="mt-4 ms-2">select your city.</h5>
      <select class="input-group p-2" name="city" id="">
        <option value="">Select City</option>
        <option value="Bhopal">Bhopal</option>
        <option value="Jabalpur">Jabalpur</option>
        <option value="Indore">Indore</option>
        <option value="Sagar">Sagar</option>
      </select>

      <h5 class="mt-4 ms-2">Area</h5>
      <input class="input-group p-2" type="text" placeholder="Enter Address" name="area">

      <h5 class="mt-4 ms-2">Description</h5>
      <textarea class="input-group p-2" name="description"></textarea>

      <h5 class="mt-4 ms-2">Contact Number</h5>
      <input class="input-group p-2" type="text" placeholder="Contact Number" name="number">

      <h5 class="mt-4 ms-2">Set Price</h5>
      <input class="input-group p-2" type="text" placeholder="price" name="price">

      <h5 class="mt-4 ms-2">Select image of your home</h5>
      <div id="img-div">
        <div class="img"><small>Front image </small><i class="ri-add-circle-line"></i><input type="file" name="images" onchange="handleImageChange(this)"></div>
        <div class="img"><i class="ri-add-circle-line"></i><input type="file" name="images" onchange="handleImageChange(this)"></div>
        <div class="img"><i class="ri-add-circle-line"></i><input type="file" name="images" onchange="handleImageChange(this)"></div>
        <div class="img"><i class="ri-add-circle-line"></i><input type="file" name="images" onchange="handleImageChange(this)"></div>
      </div>

      <button class=" mt-5 " >Post Ad</button>

    </form>




  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>

