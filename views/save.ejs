<!DOCTYPE html>
<html>

<head>
  <title>
    search rooms
  </title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/card.css' />
</head>

<body>
  <div id="main">
    <div id="nav">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/index">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/findroom">Find Rooms</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listroom">List Ads</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/save">Save Ads</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="/profile">Hello <%= loggedInUser.username%></a>
        </li>

      </ul>
    </div>

    <h2 class="fw-semibold text-center opacity-75 mb-5 mt-5">Here is all your saved ads. </h2>

    <div class="d-flex flex-wrap gap-5 ms-2 p-5">

    <% if (savedPosts.length > 0) { %>
      <% savedPosts.forEach(function (user) { %>
        <% user.posts.forEach(function (post) { %>
          <div class="card" style="width: 17rem;">
            <!-- Adjust the following lines based on the properties of your post object -->
            <a href="/card/<%= post._id %>">
              <img src="/images/postUploads/<%= post.images[1] %>" style="height:12vmax; width:17rem;"
                class="card-img-top" alt="">
            </a>
            <div class="card-body">
              <div class="card-subtitle d-flex flex-wrap justify-content-between ">
                <h5 class="card-title">
                  <%= post.type %>
                </h5>
                <h5 class="card-title"><b>ðŸ’¸ <%= post.price %></b></h5>
              </div>
              <p class="card-subtitle mt-1">
                <%= post.description %>
                  <p>
                  <p class="card-text d-flex align-items-center"> <i class="ri-map-pin-line"></i>
                    <%= post.area %>
                  </p>
                  <div class="d-flex flex-wrap align-items-center justify-content-between">
                    <h5 class="card-subtitle"><b>
                        <%= post.city%>
                      </b></h5>
                    <button class="btn btn-danger"><a style="text-decoration: none; color: #fff;"
                        href="/remove-saved/<%= post._id %>">Remove</a></button>
                  </div>
            </div>
          </div>
        <% }) %>
      <% }) %>
    <% } else { %>
      <p>You have no saved posts yet ðŸ˜’.</p>
    <% } %>
  </div>
  </div>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>


</body>

</html>